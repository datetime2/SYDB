@{
    ViewBag.Title = "Role";
    Layout = "~/Shared/_Index.cshtml";
}
<script>
    var $grid = $("#grid");
    $(function () {
        $.manageIndex.initGrid();
    });
    (function ($) {
        $.manageIndex = {
            initGrid: function () {
                $("#grid").dataGrid({
                    url: "/Role/RoleGrid",
                    height: $(window).height() - 128,
                    sortname: "Id",
                    colModel: [
                        { label: "主键", name: "Id", hidden: true, key: true },
                        { label: '角色名称', name: 'Name', width: 150, align: 'left' },
                        {
                            label: '创建时间',
                            name: 'CreateTime',
                            width: 80,
                            align: 'left',
                            formatter: "date",
                            formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                        },
                        {
                            label: "有效",
                            name: "IsEnable",
                            width: 60,
                            align: "center",
                            formatter: function (cellvalue) {
                                return cellvalue ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-on\"></i>";
                            }
                        },
                        { label: '备注', name: 'Remark', width: 300, align: 'left' }
                    ],
                    pager: "#gridPager"
                });
            },
            add: function () {
                $.modalOpen({
                    id: "Form",
                    title: "新增角色",
                    url: "/Role/Form",
                    width: "550px",
                    height: "570px",
                    btn: null
                });
            },
            edit: function () {
                var keyValue = $("#grid").jqGridRowValue().Id;
                if (!keyValue) {
                    $.UnChecked();
                    return;
                }
                $.modalOpen({
                    id: "Form",
                    title: "修改角色",
                    url: "/Role/InitForm?keyValue=" + keyValue,
                    width: "550px",
                    height: "570px",
                    btn: null
                });
            },
            remove: function () {
                var keyValue = $("#grid").jqGridRowValue().Id;
                if (!keyValue) {
                    $.UnChecked();
                    return;
                }
                $.deleteForm({
                    url: "/Role/Remove",
                    param: { keyValue: keyValue },
                    success: function () {
                        $.currentWindow().$("#grid").trigger("reloadGrid");
                    }
                });
            }
        };
    })(jQuery);
</script>

<div class="topPanel">
    <div class="toolbar">
        @Html.ButtonForUser((List<SYDB.Infrastructure.Authorize.AuthObject.ButtonForAuthorize>)ViewBag.Buttons, (int)ViewBag.MenuId)
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="grid"></table>
    <div id="gridPager"></div>
</div>

